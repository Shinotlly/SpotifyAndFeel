<Window x:Class="SpotifyAndFeel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SpotifyAndFeel"
        Width="420" Height="330"
        WindowStartupLocation="Manual"
        ResizeMode="NoResize"
        Background="#121212"
        ShowInTaskbar="True"
        WindowStyle="None"
        AllowsTransparency="True"
        Closing="Window_Closing">

    <Window.Resources>
        <!-- Genel Yazı Tipi -->
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Foreground" Value="#EAEAEA"/>
        </Style>

        <!-- Yeşil Spotify Butonu -->
        <Style x:Key="RoundedButton" TargetType="Button">
            <Setter Property="Background" Value="#1DB954"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border  
                            Background="{TemplateBinding Background}"
                            CornerRadius="20"
                            SnapsToDevicePixels="True">
                            <ContentPresenter
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1ED760"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#1AA34A"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Dil Seçme Toggle Butonu -->
        <Style x:Key="LangToggleButton" TargetType="ToggleButton">
            <Setter Property="Background" Value="#2A2A2A"/>
            <Setter Property="Foreground" Value="#EAEAEA"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderBrush" Value="#444"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="20">
                            <ContentPresenter
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Margin="{TemplateBinding Padding}" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Background" Value="#1DB954"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="BorderBrush" Value="#1DB954"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#333333"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- TextBox -->
        <Style TargetType="TextBox">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#EAEAEA"/>
            <Setter Property="Background" Value="#181818"/>
            <Setter Property="BorderBrush" Value="#333"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6"/>
        </Style>

    </Window.Resources>

    <!-- ANA GRID -->
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <!-- Başlık çubuğu -->
            <RowDefinition Height="Auto"/>
            <!-- Üst menü -->
            <RowDefinition Height="*"/>
            <!-- Metin kutusu -->
            <RowDefinition Height="Auto"/>
            <!-- Play butonu -->
        </Grid.RowDefinitions>

        <!-- 🟩 Özel Başlık Çubuğu -->
        <Grid Grid.Row="0" Background="#181818" MouseDown="TitleBar_MouseDown">
            <TextBlock Text="SpotifyAndFeel"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       Margin="15,0,0,0"
                       Foreground="#EAEAEA"
                       FontSize="14"
                       FontWeight="SemiBold"/>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Margin="0,0,10,0">
                <Button Content="—"
                        Width="30" Height="30"
                        Background="Transparent"
                        Foreground="#EAEAEA"
                        BorderBrush="Transparent"
                        FontSize="16"
                        FontWeight="Bold"
                        Cursor="Hand"
                        Click="Minimize_Click"
                        Margin="0,0,5,0"/>
                <Button Content="✕"
                        Width="30" Height="30"
                        Background="Transparent"
                        Foreground="#EAEAEA"
                        BorderBrush="Transparent"
                        FontSize="14"
                        FontWeight="Bold"
                        Cursor="Hand"
                        Click="Close_Click"/>
            </StackPanel>
        </Grid>

        <!-- 🧭 Üst Menü -->
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,10,0,10">
            <ToggleButton x:Name="btnTurkish"
                    Style="{StaticResource LangToggleButton}"
                    Content="Turkish"
                    Width="80" Height="32"
                    Checked="BtnTurkish_Click"
                    Unchecked="BtnTurkish_Unchecked"/>

            <Button x:Name="btnToggle"
                    Style="{StaticResource RoundedButton}"
                    Content="Start Recording"
                    Width="140" Height="36"
                    Margin="20,0,20,0"
                    Click="BtnToggle_Click"/>

            <ToggleButton x:Name="btnEnglish"
                    Style="{StaticResource LangToggleButton}"
                    Content="English"
                    Width="80" Height="32"
                    Checked="BtnEnglish_Click"
                    Unchecked="BtnEnglish_Unchecked"/>
        </StackPanel>

        <!-- 📝 Metin Kutusu -->
        <TextBox x:Name="txtResult"
                 Grid.Row="2"
                 Margin="0,0,0,10"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto"/>

        <!-- ▶ Play Butonu -->
        <Button x:Name="btnPlay"
                Grid.Row="3"
                Content="Play"
                Style="{StaticResource RoundedButton}"
                Width="100"
                Height="34"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Margin="0,5,0,0"
                Click="BtnPlay_Click"/>
    </Grid>
</Window>
