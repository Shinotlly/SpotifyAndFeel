<Application x:Class="SpotifyAndFeel.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:tb="http://www.hardcodet.net/taskbar"
             StartupUri="MainWindow.xaml">

    <Application.Resources>
        <!-- TaskbarIcon Kontrolü -->
        <tb:TaskbarIcon x:Key="TrayIcon"
                    IconSource="pack://application:,,,/Resources/mic.ico"
                    ToolTipText="Ses → Metin Uygulaması"
                    MenuActivation="RightClick">
            <tb:TaskbarIcon.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Aç" Click="OnOpen"/>
                    <Separator/>
                    <MenuItem Header="Çıkış" Click="OnExit"/>
                </ContextMenu>
            </tb:TaskbarIcon.ContextMenu>
        </tb:TaskbarIcon>
    </Application.Resources>

</Application>
